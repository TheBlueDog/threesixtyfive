<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading center">	
				<%= image_tag @snap.image.url(:large), class: "img-responsive" %>
			</div>
			<div class="panel-body">
				<p><strong><%= @snap.title %></strong></p>
				<p><%= @snap.description %></p>
				<p>Photo by: <%= @snap.user.username if @snap.user %></p>
        <p>Taken: <%= @snap.taken_at.strftime("%B %-d, %Y") if @snap.user && @snap.taken_at.present? %></p>
        <p>Camera: <%= @snap.make if @snap.user && @snap.make.present? %> <%= @snap.model if @snap.user && @snap.model.present? %></p>
        <p>ISO: <%= @snap.iso if @snap.user && @snap.iso.present? %></p>
        <p>Focal Length: <%= @snap.focal if @snap.user && @snap.focal.present? %></p>
        <% if @snap.user == current_user %>
          <div class="actions">
            <%= link_to edit_snap_path(@snap) do %>
              <span class="glyphicon glyphicon-edit"></span>
              Edit
            <% end %>
            <%= link_to @snap, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
